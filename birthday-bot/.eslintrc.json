{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["standard", "prettier", "prettier/standard"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": false }
    ],
    "no-tabs": "error",
    "max-len": ["error", { "code": 80, "ignoreUrls": true }]
  }
}
